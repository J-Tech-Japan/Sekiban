<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- .NET ツールとしてパッケージングする設定 -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>create-sekiban-template</ToolCommandName>

    <!-- NuGet パッケージ メタデータ -->
    <PackageId>CreateSekibanTemplate</PackageId>
    <!-- Version is set by CI/CD via -p:PackageVersion -->
    <Authors>J-Tech Japan</Authors>
    <Company>J-Tech Japan</Company>
    <Description>Installs Sekiban Pure/DCB templates and generates an Orleans + API + Blazor project.</Description>
    <PackageTags>dotnet-tool;sekiban;pure;dcb;orleans</PackageTags>
    <Title>Create Sekiban Template Tool</Title>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/J-Tech-Japan/Sekiban-dcb</RepositoryUrl>
  </PropertyGroup>

</Project>
