{
  "$schema": "http://json.schemastore.org/template",
  "author": "J-Tech Japan",
  "classifications": ["Aspire", "Orleans", "Sekiban", "Dcb", "EventSourcing", "Decider", "AWS", "DynamoDB"],
  "name": "Sekiban Dcb Decider AWS Template (DynamoDB)",
