# Node environment
NODE_ENV=development

# Server configuration
PORT=3000
ACTOR_SERVER_PORT=50010

# Storage configuration
# Options: inmemory, postgres, cosmos
STORAGE_TYPE=inmemory

# PostgreSQL configuration (required when STORAGE_TYPE=postgres)
DATABASE_URL=postgresql://sekiban:sekiban_password@localhost:5432/sekiban_events

# Cosmos DB configuration (required when STORAGE_TYPE=cosmos)
# COSMOS_CONNECTION_STRING=your-cosmos-connection-string
# COSMOS_DATABASE=sekiban-events
# COSMOS_CONTAINER=events

# Dapr configuration
DAPR_HTTP_PORT=3500
DAPR_GRPC_PORT=50001
DAPR_APP_ID=sekiban-api
DAPR_STATE_STORE_NAME=statestore
DAPR_PUBSUB_NAME=pubsub
DAPR_EVENT_TOPIC=events

# API configuration
API_PREFIX=/api
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info