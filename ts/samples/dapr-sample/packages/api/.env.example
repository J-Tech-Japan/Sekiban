# Node environment
NODE_ENV=development

# Server ports
PORT=3000
ACTOR_SERVER_PORT=50010

# Storage configuration
# Set to 'true' to use PostgreSQL, 'false' for in-memory storage
USE_POSTGRES=false

# PostgreSQL configuration (required when USE_POSTGRES=true)
DATABASE_URL=postgresql://sekiban:sekiban_password@localhost:5432/sekiban_events

# Dapr configuration
DAPR_HTTP_PORT=3500
DAPR_GRPC_PORT=50001
DAPR_APP_ID=sekiban-api
DAPR_STATE_STORE_NAME=statestore
DAPR_PUBSUB_NAME=pubsub
DAPR_EVENT_TOPIC=events

# Actor configuration
DAPR_ACTOR_TYPE=AggregateActor
DAPR_APP_ID_FOR_ACTORS=sekiban-api

# API configuration
API_PREFIX=/api
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info