{
  "name": "@sekiban/dapr-sample-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Weather Forecast API - Sekiban Dapr Sample Backend",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "dapr:run": "dapr run --app-id weather-forecast-api --app-port 3000 --dapr-http-port 3500 --components-path ../../dapr-components-local -- pnpm dev",
    "dapr:stop": "dapr stop weather-forecast-api",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dapr/dapr": "^3.0.0",
    "@sekiban/core": "workspace:*",
    "@sekiban/dapr": "workspace:*",
    "@sekiban/dapr-sample-domain": "workspace:*",
    "express": "^4.18.0",
    "neverthrow": "^6.0.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^9.0.0",
    "supertest": "^6.3.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}