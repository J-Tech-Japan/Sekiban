{
  "name": "@sekiban/dapr-sample",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Weather Forecast Dapr sample demonstrating Sekiban multi-payload projectors with TypeScript",
  "scripts": {
    "build": "pnpm -r build",
    "dev:api": "pnpm --filter @sekiban/dapr-sample-api dev",
    "dev:web": "pnpm --filter @sekiban/dapr-sample-web dev",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}