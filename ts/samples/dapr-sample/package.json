{
  "name": "@sekiban/dapr-sample",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Comprehensive TypeScript Dapr sample application demonstrating Sekiban event sourcing",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:acceptance": "vitest run tests/acceptance",
    "test:watch": "vitest",
    "dev": "docker-compose up -d postgres && pnpm -r dev",
    "dev:api": "pnpm --filter sekiban-dapr-api dev",
    "dev:web": "pnpm --filter sekiban-dapr-web dev",
    "clean": "pnpm -r clean",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "dapr:start": "dapr run --app-id sekiban-dapr-api --app-port 3000 --dapr-http-port 3500 -- pnpm dev:api",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx --fix"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.0",
    "testcontainers": "^10.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@sekiban/core": "workspace:*",
    "@sekiban/postgres": "workspace:*",
    "@sekiban/dapr": "workspace:*",
    "@sekiban/config": "workspace:*",
    "@sekiban/testing": "workspace:*",
    "express": "^4.18.0",
    "neverthrow": "^6.0.0",
    "pg": "^8.11.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}