{
  "name": "@sekiban/core",
  "version": "0.1.0-alpha.1",
  "description": "Core event sourcing and CQRS framework for TypeScript",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "./build-types.sh",
    "postbuild": "ls -la dist/*.d.ts || echo 'Warning: No .d.ts files found!'",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "event-sourcing",
    "cqrs",
    "ddd",
    "typescript"
  ],
  "author": "Sekiban",
  "license": "MIT",
  "dependencies": {
    "neverthrow": "^8.0.0",
    "uuid": "^9.0.1",
    "zod": "^3.25.71"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "@sekiban/testing": "file:../testing",
    "@vitest/coverage-v8": "^1.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/J-Tech-Japan/Sekiban",
    "directory": "ts/src/packages/core"
  }
}