# Sekiban Configuration Example

# Storage Provider Configuration
# Options: inmemory, postgres, cosmos
SEKIBAN_STORAGE_TYPE=postgres

# PostgreSQL Configuration
SEKIBAN_POSTGRES_CONNECTION_STRING=postgresql://user:password@localhost:5432/sekiban_db
SEKIBAN_POSTGRES_POOL_MIN=2
SEKIBAN_POSTGRES_POOL_MAX=10

# CosmosDB Configuration (if using cosmos)
# SEKIBAN_COSMOS_ENDPOINT=https://your-account.documents.azure.com:443/
# SEKIBAN_COSMOS_KEY=your-cosmos-key
# SEKIBAN_COSMOS_DATABASE_ID=sekiban
# SEKIBAN_COSMOS_CONTAINER_ID=events
# SEKIBAN_COSMOS_CONSISTENCY_LEVEL=Session

# General Settings
SEKIBAN_DEFAULT_PARTITION_KEY=default
SEKIBAN_ENABLE_METRICS=false
SEKIBAN_ENABLE_TRACING=false
SEKIBAN_LOG_LEVEL=info

# Retry and Timeout Settings
SEKIBAN_MAX_RETRIES=3
SEKIBAN_RETRY_DELAY=1000
SEKIBAN_TIMEOUT=30000