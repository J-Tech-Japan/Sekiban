{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Azure": "Warning",
      "Azure.Core": "Warning",
      "Azure.Storage": "Warning",
      "Orleans": "Warning",
      "Orleans.Streams": "Warning",
      "DcbOrleans.ApiService": "Information"
    }
  },
  "AllowedHosts": "*",
  "Sekiban": {
    "Database": "sqlite",
    "ColdEvent": {
      "Enabled": false,
      "PullInterval": "00:30:00",
      "SafeWindow": "00:02:00",
      "SegmentMaxEvents": 100000,
      "SegmentMaxBytes": 536870912,
      "Storage": {
        "Type": "jsonl",
        "BasePath": ".cold-events",
        "JsonlDirectory": "jsonl",
        "SqliteFile": "cold-events.sqlite",
        "DuckDbFile": "cold-events.duckdb"
      }
    }
  }
}
